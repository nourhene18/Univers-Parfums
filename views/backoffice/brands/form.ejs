<div class="page">

  <div class="page-header center">
    <h1>Ajouter une marque</h1>
    <p class="subtitle">Créer une nouvelle maison de parfum</p>
  </div>

  <div class="card">

    <form method="post"
          action="/backoffice/brands"
          class="form-elegant">

      <div class="section">
        <div class="form-group full">
          <label>Nom de la marque</label>
          <input
            name="nom"
            placeholder="Ex : Dior, Maison Francis Kurkdjian…"
            required>
        </div>
      </div>

      <div class="section form-row">

        <div class="form-group">
          <label>Pays</label>
          <input
            name="pays"
            placeholder="Ex : France, Italie, UAE…"
            required>
        </div>

        <div class="form-group">
          <label>Type</label>
          <select name="type">
            <option value="Designer">Designer</option>
            <option value="Niche">Niche</option>
            <option value="Artisanale">Artisanale</option>
            <option value="Célébrité">Célébrité</option>
          </select>
        </div>

      </div>

      <div class="form-actions">
        <button type="submit" class="btn">
          Créer la marque
        </button>

        <a href="/backoffice/brands" class="btn secondary">
          Annuler
        </a>
      </div>

    </form>

  </div>
</div>
